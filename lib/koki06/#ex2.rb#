class Rubynovice

  def ex2_1
    8.times do
      puts "I love Shunkun.\n"
    end
  end

  def ex2_2
    for i in 1..5 do
      puts i
    end

  end

  def ex2_3
    i=10

    while i>=2 do
      p i
      i -= 2
    end
  end
  
  
  def ex2_4

    3.times{|i|
      3.times{|j|
        print ("#{i+1},#{j+1}\n")
      }
    }
    
  end

  def ex2_5

    9.times{|i|
      9.time{|j|
        printf("%3d",(i+1)*(j+1))
      }
      printf("\n")
    }
  end

  def ex2_6
    
    sum=0
    10.times{|i|
      sum=sum+(i+1)
    }
    
    p sum   

  end  

  def ex2_7

    factorial=1
    10.times{|i|
      factorial = factorial*(i+1)
    }
    
    p factorial
  end
end


