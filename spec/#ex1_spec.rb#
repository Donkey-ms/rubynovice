# -*- coding: utf-8 -*-
require 'spec_helper'

describe Rubynovice do
  before do
    @rubynovice = Rubynovice.new
  end

  it 'has a version number' do
    print Rubynovice::VERSION+"\n"
    expect(Rubynovice::VERSION).not_to be nil
  end

  it 'ex1_1 prints hello world',ex: 'ex1_1' do
    expected = "hello world.\n"
    print @rubynovice.ex1_1
    expect(@rubynovice.ex1_1).to eq(expected)
  end
  #’¤³’¤³’¤Ï’Éá’ÄÌ’¤Ëreturn "hello world.\n"’¤È’¤·’¤Æ’ºî’À®’¤·’¤Æ’¤¯’¤ì’¤ë’¤Î’¤ò’´ü’ÂÔ’¤¹’¤ë’¡¥

  it 'ex1_2 return 1+1',ex: 'ex1_2' do
    expected = 2
    expect(@rubynovice.ex1_2).to eq(expected)
  end
  #1+1’¤ò’ÊÑ’¿ô’¤Ë’Âå’Æþ’¤¹’¤ë’¤«’¤â’¤·’¤¯’¤Ï’¤½’¤Î’¤Þ’¤Þ’ÊÖ’¤µ’¤ì’¤ë’¤Î’¤ò’´ü’ÂÔ’¤¹’¤ë’¡¥

  it 'ex1_3 printf ans=2\n',ex: 'ex1_3' do
    expected = "ans=2\n"
    expect(@rubynovice.ex1_3).to eq(expected)
  end
  #’½Ð’ÎÏ’¤È’¤·’¤Æ’ÊÑ’¿ô’¤Ë"ans=2\n"’¤ò’Âå’Æþ’¤·’¤Æprintf’¤Ç’½Ð’ÎÏ’¤µ’¤»’¤Æ’¡¤
  #’¤½’¤Î’ÊÑ’¿ô’¤òreturn’¤¹’¤ë’¤è’¤¦’¤Ë’¤¹’¤ë’¤Èprintf’¤Î’»È’¤¤’Êý’¤È’¤¢’¤ï’¤»’¤Æ
  #’¥Æ’¥¹’¥È’¶î’Æ°’¤µ’¤»’¤Æ’¤¤’¤ë’´¶’¤¸’¤Ë’¤ß’¤¨’¤ë’¡¥rake’»þ’¤Ë’ÎÐ’»ú’¤À’¤±’¤Ç’¤Ê’¤¯’¡¤printf’¤Î’½Ð’ÎÏ’¤Ë’¤Ä’¤¤’¤Æ’¤â’³Î’Ç§’¡¥
  
end
